pipeline {
    agent {
        docker {
            image 'python:3.11-slim'
        }
    }

    environment {
        APP_NAME = 'myapp'
    }

    stages {
        stage('Install dependencies') {
            steps {
                sh '''
                    python3 -m pip install --upgrade pip 
                    pip3 install -r requirements.txt
                '''
            }
        }

        stage('Run script') {
            steps {
                sh 'python ip.py'
            }
        }

        stage('Test') {
            steps {
                sh 'python -m unittest test.py'
            }
        }

        stage('Deploy') {
    agent any
    steps {
        script {
            sh '''
                echo Deploying container: $APP_NAME
                docker stop $APP_NAME || true
                docker rm $APP_NAME || true
                docker run -d --name $APP_NAME $APP_NAME:latest
            '''
        }
    }
}

    }
}


