pipeline {
    agent {
        docker {
            image 'python:3.10-slim'
            args '-v C:/jenkins/workspace/prime_num:/workspace'  // Map Windows workspace to /workspace in container
        }
    }
    stages {
        stage('Run Python Script') {
            steps {
                dir('/workspace') {   // Use Linux style path inside container
                    sh '''
                        pip install requests
                        python prime.py
                    '''
                }
            }
        }
    }
}





