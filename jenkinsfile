pipeline {
    agent {
        docker {
            image 'python:3.10-slim'
            args '-v /var/jenkins_home/workspace/prime_num:/workspace'
            reuseNode true
        }
    }

    options {
        // Use Linux style path inside container
        customWorkspace '/workspace'
    }

    stages {
        stage('Install dependencies') {
            steps {
                sh 'pip install requests'
            }
        }
        stage('Run script') {
            steps {
                sh 'python prime.py'
            }
        }
    }
}



