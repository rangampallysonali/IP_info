pipeline {
    agent {
docker {
image 'python:3.11-slim'
}
}
    stages {
     stage('Install dependencies') {
            steps {
               
                sh'''
                    python3 -m pip install --upgrade pip 
                    pip3 install -r requirements.txt
                    '''
}
}
stage('run script') {
            steps {
                    sh '''
                       
                        python ip.py
                    '''
                }
            }
            stage('test') {
            steps {
                    sh '''
                       
                        python -m unittest test.py
                    '''
                }
       }
 }






