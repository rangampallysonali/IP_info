pipeline {
    agent {
        docker {
            image 'python:3.10-slim'
            args '-v /var/jenkins_home/workspace/prime_num:/workspace'
            reuseNode true
        }
    }
    // `customWorkspace` goes here, directly under pipeline, NOT under options
    customWorkspace '/workspace'

    stages {
        stage('Install dependencies') {
            steps {
                sh 'pip install requests'
            }
        }
        stage('Run script') {
            steps {
                sh 'python prime.py'
            }
        }
    }
}



