pipeline {
    agent {
        docker {
            image 'python:3.11-slim'
        }
    }

    environment {
        APP_NAME = "myapp" // ✅ Set your app name here
    }

    stages {
        stage('Install dependencies') {
            steps {
                sh '''
                    python3 -m pip install --upgrade pip 
                    pip3 install -r requirements.txt
                '''
            }
        }

        stage('Run script') {
            steps {
                sh '''
                    python ip.py
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                    python -m unittest test.py
                '''
            }
        }

        stage('Deploy') {
            steps {
                // ✅ Use a non-Docker agent OR Docker-enabled host for this stage
                // because Docker inside Docker without setup will fail
                sh '''
                    # These commands require Docker to be installed on the agent
                    echo "Deploying container: $APP_NAME"
                    docker stop $APP_NAME || true
                    docker rm $APP_NAME || true
                    docker run -d --name $APP_NAME $APP_NAME:latest
                '''
            }
        }
    }
}







